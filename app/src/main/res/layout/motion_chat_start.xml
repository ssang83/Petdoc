<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/btnQuestion"
        android:layout_width="240dp"
        android:layout_height="@dimen/home_search_doctor_question_height"
        android:background="@drawable/bg_doctor_question"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bannerDoctor"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/img_banner_doctor"
        app:layout_constraintBottom_toBottomOf="@+id/btnQuestion"
        app:layout_constraintStart_toStartOf="@+id/btnQuestion"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bannerText"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_banner_text1"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/bannerDoctor"
        app:layout_constraintTop_toTopOf="@+id/btnQuestion"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="5.2dp"
        android:src="@drawable/img_banner_text2"
        app:layout_constraintStart_toStartOf="@+id/bannerText"
        app:layout_constraintTop_toBottomOf="@+id/bannerText"/>
</androidx.constraintlayout.widget.ConstraintLayout>