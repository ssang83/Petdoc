<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/date"
        tools:text="2020년 11월 13일"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textSize="14dp"
        android:textStyle="normal"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:text="펫닥"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/slateGrey"
        android:layout_marginLeft="16dp"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/msg"
        android:text="안녕하세요.펫닥입니다.\n어떤 아이를 위한 상담인\n가요?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:textSize="16sp"
        android:textColor="@color/slateGrey"
        android:textStyle="normal"
        android:includeFontPadding="false"
        android:background="@drawable/grey_round_stoke_rect"
        app:layout_constraintTop_toBottomOf="@+id/name"
        app:layout_constraintStart_toStartOf="@+id/name"/>

    <androidx.appcompat.widget.AppCompatTextView
        tools:text="11:36"
        android:id="@+id/firstMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/msg"
        app:layout_constraintBottom_toBottomOf="@+id/msg"
        android:layout_marginLeft="8dp"
        android:textSize="10sp"
        android:textStyle="normal"
        android:includeFontPadding="false"
        android:textColor="#bebed1"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/petList"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/msg"
        app:layout_constraintStart_toStartOf="parent"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepPetLayer"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petList"
        android:visibility="gone"
        >

        <androidx.appcompat.widget.AppCompatTextView
            tools:text="11:36"
            android:id="@+id/selectPetTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/selectPetName"
            app:layout_constraintEnd_toStartOf="@+id/selectPetName"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"
            android:textStyle="normal"
            android:includeFontPadding="false"
            android:textColor="#bebed1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/selectPetName"
            tools:text="동동이"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/slateGrey"
            android:textStyle="normal"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:background="@drawable/grey_round_stoke_rect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/secondMsgLayer"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/stepPetLayer"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:text="펫닥"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/slateGrey"
            android:layout_marginLeft="16dp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMsg"
            android:text="정확한 진단을 위해 상담을\n 원하는 상담 분류를\n선택해주세요."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/slateGrey"
            android:textStyle="normal"
            android:includeFontPadding="false"
            android:background="@drawable/grey_round_stoke_rect"
            app:layout_constraintTop_toBottomOf="@+id/textViewName"
            app:layout_constraintStart_toStartOf="@+id/textViewName"/>

        <androidx.appcompat.widget.AppCompatTextView
            tools:text="11:36"
            android:id="@+id/secondMsgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/textViewMsg"
            app:layout_constraintBottom_toBottomOf="@+id/textViewMsg"
            android:layout_marginLeft="8dp"
            android:textSize="10sp"
            android:textStyle="normal"
            android:includeFontPadding="false"
            android:textColor="#bebed1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/categoryList"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/secondMsgLayer"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/stepCategoryLayer"
        app:layout_constraintTop_toBottomOf="@+id/categoryList"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        >

        <androidx.appcompat.widget.AppCompatTextView
            tools:text="11:36"
            android:id="@+id/selectCategoryTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/selectCategory"
            app:layout_constraintEnd_toStartOf="@+id/selectCategory"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"
            android:textStyle="normal"
            android:includeFontPadding="false"
            android:textColor="#bebed1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/selectCategory"
            tools:text="예방접종"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/slateGrey"
            android:textStyle="normal"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:background="@drawable/grey_round_stoke_rect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lastMsgLayer"
        app:layout_constraintTop_toBottomOf="@+id/stepCategoryLayer"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewName1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="16dp"
            android:text="펫닥"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/slateGrey"
            android:layout_marginLeft="16dp"
            android:includeFontPadding="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewMsg1"
            android:text="네. 선택이 완료되었습니다.\n상담을 시작하시겠어요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="5dp"
            android:textSize="16sp"
            android:textColor="@color/slateGrey"
            android:textStyle="normal"
            android:includeFontPadding="false"
            android:background="@drawable/grey_round_stoke_rect"
            app:layout_constraintTop_toBottomOf="@+id/textViewName1"
            app:layout_constraintStart_toStartOf="@+id/textViewName1"/>

        <androidx.appcompat.widget.AppCompatTextView
            tools:text="11:36"
            android:id="@+id/lastMsgTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/textViewMsg1"
            app:layout_constraintBottom_toBottomOf="@+id/textViewMsg1"
            android:layout_marginLeft="8dp"
            android:textSize="10sp"
            android:textStyle="normal"
            android:includeFontPadding="false"
            android:textColor="#bebed1"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonLayer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="@dimen/button_margin"
            android:layout_marginEnd="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            app:layout_constraintTop_toBottomOf="@+id/textViewMsg1"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnYes"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_default"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constrainedWidth="true"
                app:layout_constraintWidth_percent="0.5"
                android:background="@drawable/orange_round_solid_6"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textSize="@dimen/fix_text_size_5"
                android:text="네" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnNo"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_height_default"
                android:includeFontPadding="false"
                app:layout_constraintStart_toEndOf="@+id/btnYes"
                app:layout_constraintTop_toTopOf="parent "
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"
                android:background="@drawable/darkgrey_solid_round_rect"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textAlignment="gravity"
                android:gravity="center"
                android:textSize="@dimen/fix_text_size_5"
                android:text="아니오" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/lastMsgLayer"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:id="@+id/confirmLayer"
        android:visibility="gone"
        >

        <androidx.appcompat.widget.AppCompatTextView
            tools:text="11:36"
            android:id="@+id/confirmTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/textViewConfirm"
            app:layout_constraintEnd_toStartOf="@+id/textViewConfirm"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"
            android:textStyle="normal"
            android:includeFontPadding="false"
            android:textColor="#bebed1"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewConfirm"
            android:text="네"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingTop="5dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="5dp"
            android:textSize="16sp"
            android:textColor="@color/slateGrey"
            android:textStyle="normal"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:background="@drawable/grey_round_stoke_rect"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>