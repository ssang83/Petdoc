<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:id="@+id/petCategory"
        android:layout_width="0dp"
        android:layout_height="@dimen/home_search_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scrollbarSize="0dp"
        android:scrollbars="none"
        android:scrollbarFadeDuration="0"
        android:fadingEdge="none"
        android:fadeScrollbars="false"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|start"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="@dimen/life_top_col_category_width"
                android:layout_height="match_parent"
                android:id="@+id/layoutPetAll"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/home_text_gap2"
                >
                <ImageView
                    android:id="@+id/imageViewPetAll"
                    android:layout_width="@dimen/life_top_col_category_image"
                    android:layout_height="@dimen/life_top_col_category_image"
                    android:background="@drawable/bg_search_pet_all"
                    />
                <TextView
                    android:id="@+id/textViewPetAll"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/life_top_col_category_text_height"
                    android:includeFontPadding="false"
                    android:text="@string/home_all"
                    android:textColor="@color/search_pet_all"
                    android:textSize="@dimen/fix_text_size_2"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|bottom"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/life_top_col_category_width"
                android:layout_height="match_parent"
                android:id="@+id/layoutDog"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imageViewDog"
                    android:layout_width="@dimen/life_top_col_category_image"
                    android:layout_height="@dimen/life_top_col_category_image"
                    android:background="@drawable/bg_search_pet_dog"
                    />
                <TextView
                    android:id="@+id/textViewDog"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/life_top_col_category_text_height"
                    android:includeFontPadding="false"
                    android:textStyle="normal"
                    android:text="@string/dog"
                    android:textColor="@color/search_pet_dog"
                    android:textSize="@dimen/fix_text_size_2"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|bottom"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/life_top_col_category_width"
                android:layout_height="match_parent"
                android:id="@+id/layoutCat"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imageViewCat"
                    android:layout_width="@dimen/life_top_col_category_image"
                    android:layout_height="@dimen/life_top_col_category_image"
                    android:background="@drawable/bg_search_pet_cat"
                    />
                <TextView
                    android:id="@+id/textViewCat"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/life_top_col_category_text_height"
                    android:text="@string/cat"
                    android:includeFontPadding="false"
                    android:textStyle="normal"
                    android:textColor="@color/search_pet_cat"
                    android:textSize="@dimen/fix_text_size_2"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|bottom"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="@dimen/life_top_col_category_width"
                android:layout_height="match_parent"
                android:id="@+id/layoutEtc"
                android:gravity="center"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/imageViewEtc"
                    android:layout_width="@dimen/life_top_col_category_image"
                    android:layout_height="@dimen/life_top_col_category_image"
                    android:adjustViewBounds="true"
                    android:src="@drawable/bg_search_pet_etc"
                    />
                <TextView
                    android:id="@+id/textViewEtc"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/life_top_col_category_text_height"
                    android:includeFontPadding="false"
                    android:text="@string/special"
                    android:textColor="@color/search_pet_etc"
                    android:textSize="@dimen/fix_text_size_2"
                    android:textAlignment="gravity"
                    android:gravity="center_horizontal|bottom"
                    />
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutCategory"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_header_height"
        android:background="@color/light_grey6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/petCategory">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/filterTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/home_content_margin"
            android:text="전체"
            android:textSize="@dimen/fix_text_size_3"
            android:textColor="@color/light_grey"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/searchCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/home_text_gap1"
            android:text="0"
            android:textStyle="bold"
            android:textColor="@color/orange"
            android:textSize="@dimen/fix_text_size_3"
            app:layout_constraintStart_toEndOf="@+id/filterTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_search_count"
            android:textSize="@dimen/fix_text_size_3"
            android:textColor="@color/light_grey"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchCount"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnCategoryFilter"
            android:layout_width="@dimen/home_search_image_size"
            android:layout_height="@dimen/home_search_image_size"
            android:layout_marginEnd="@dimen/home_content_gap5"
            tools:src="@drawable/ic_filter_open"
            app:layout_constraintEnd_toStartOf="@+id/layoutOrder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginEnd="@dimen/home_content_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <View
                android:id="@+id/divider"
                android:layout_width="1dp"
                android:layout_height="@dimen/home_search_image_size"
                android:background="@color/veryLightPinkFour"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewFilter"
                android:layout_width="@dimen/home_search_image_size"
                android:layout_height="@dimen/home_search_image_size"
                android:layout_marginStart="@dimen/home_content_gap6"
                android:src="@drawable/ic_common_filter"
                app:layout_constraintStart_toEndOf="@+id/divider"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_search_filter_recommend"
                android:textSize="@dimen/fix_text_size_2"
                android:textColor="@color/light_grey"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/imageViewFilter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchTalkList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/layoutCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutOrderMenu"
        android:layout_width="88dp"
        android:layout_height="105dp"
        android:visibility="gone"
        android:background="@drawable/img_drop_down_menu_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutCategory"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/orderRecommed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:text="@string/chat_exisiting_info_order_recommend"
            android:textStyle="normal"
            android:textSize="@dimen/fix_text_size_2"
            android:textColor="@color/dark_grey"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/orderRecently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="21dp"
            android:text="@string/chat_exisiting_info_order_recently"
            android:textStyle="normal"
            android:textSize="@dimen/fix_text_size_2"
            android:textColor="@color/dark_grey"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        tools:text="@string/chat_search_all_chat_empty"
        android:textSize="@dimen/fix_text_size_3"
        android:textColor="@color/dark_grey"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/layoutCategory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/layoutCategory"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFilter1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_header_height"
            android:paddingStart="@dimen/home_content_margin"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filterAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/home_search_filter_all"
                android:textStyle="normal"
                android:textColor="@color/search_category"
                android:textSize="@dimen/fix_text_size_3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filterAction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/home_search_filter_action"
                android:textStyle="normal"
                android:textColor="@color/search_category"
                android:textSize="@dimen/fix_text_size_3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/filterAll"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider1"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/light_grey4"
            app:layout_constraintTop_toBottomOf="@+id/layoutFilter1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFilter2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_header_height"
            android:paddingStart="@dimen/home_content_margin"
            app:layout_constraintTop_toBottomOf="@+id/divider1"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filterFeed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/home_search_filter_feed"
                android:textStyle="normal"
                android:textColor="@color/search_category"
                android:textSize="@dimen/fix_text_size_3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filterDisease"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/home_search_filter_disease"
                android:textStyle="normal"
                android:textColor="@color/search_category"
                android:textSize="@dimen/fix_text_size_3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/filterFeed"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/light_grey4"
            app:layout_constraintTop_toBottomOf="@+id/layoutFilter2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFilter3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_header_height"
            android:paddingStart="@dimen/home_content_margin"
            app:layout_constraintTop_toBottomOf="@+id/layoutFilter2"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filterOriental"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/home_search_filter_oriental"
                android:textStyle="normal"
                android:textColor="@color/search_category"
                android:textSize="@dimen/fix_text_size_3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filterSurgery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/home_search_filter_surgery"
                android:textStyle="normal"
                android:textColor="@color/search_category"
                android:textSize="@dimen/fix_text_size_3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/filterOriental"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/light_grey4"
            app:layout_constraintTop_toBottomOf="@+id/layoutFilter3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFilter4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/home_header_height"
            android:paddingStart="@dimen/home_content_margin"
            app:layout_constraintTop_toBottomOf="@+id/divider3"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filterVaccine"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/home_search_filter_vaccine"
                android:textStyle="normal"
                android:textColor="@color/search_category"
                android:textSize="@dimen/fix_text_size_3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/filterEtc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/home_search_filter_etc"
                android:textStyle="normal"
                android:textColor="@color/search_category"
                android:textSize="@dimen/fix_text_size_3"
                app:layout_constraintWidth_default="percent"
                app:layout_constraintWidth_percent="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/filterVaccine"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/light_grey4"
            app:layout_constraintTop_toBottomOf="@+id/layoutFilter4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutEmpty"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageViewEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_search_no_result"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/emptyText"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/home_content_margin"
            android:text="‘치킨’에 대한 기존 상담 내역이 없습니다. 수의사 선생님께 상담해 보세요."
            android:textSize="@dimen/fix_text_size_3"
            android:textStyle="normal"
            android:textColor="@color/dark_grey"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/imageViewEmpty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chatMotionLayout"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/home_content_margin"
        android:visibility="gone"
        >

        <View
            android:id="@+id/btnQuestion"
            android:layout_width="240dp"
            android:layout_height="@dimen/home_search_doctor_question_height"
            android:background="@drawable/bg_doctor_question"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bannerText2"
            android:layout_width="27dp"
            android:layout_height="15dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_banner_text3"
            app:layout_constraintBottom_toBottomOf="@+id/btnQuestion"
            app:layout_constraintStart_toStartOf="@+id/btnQuestion"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bannerDoctor1"
            android:layout_width="54dp"
            android:layout_height="33dp"
            android:src="@drawable/img_clinic_banner"
            android:adjustViewBounds="true"
            android:layout_marginStart="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/btnQuestion"
            app:layout_constraintStart_toStartOf="@+id/btnQuestion"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bannerDoctor"
            android:layout_width="58dp"
            android:layout_height="52dp"
            android:layout_marginStart="20dp"
            android:src="@drawable/img_banner_doctor"
            app:layout_constraintBottom_toBottomOf="@+id/btnQuestion"
            app:layout_constraintStart_toStartOf="@+id/btnQuestion"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bannerText"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/img_banner_text1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toEndOf="@+id/bannerDoctor"
            app:layout_constraintTop_toTopOf="@+id/btnQuestion"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/bannerText1"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="5.2dp"
            android:src="@drawable/img_banner_text2"
            app:layout_constraintStart_toStartOf="@+id/bannerText"
            app:layout_constraintTop_toBottomOf="@+id/bannerText"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutChat"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnTop"
        android:background="@drawable/coral_pink_circle"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imageBannerTxt"
            android:layout_width="27dp"
            android:layout_height="15dp"
            android:src="@drawable/img_banner_text3"
            android:layout_marginTop="5dp"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/img_clinic_banner"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageBannerTxt"
