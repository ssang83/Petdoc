<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- 진료/호텔 가능 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <RadioGroup
            android:id="@+id/type2Layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:checkedButton="@id/btnClinicType2"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RadioButton
                android:id="@+id/btnClinicType2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_tab_bg_left_box"
                android:button="@null"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_hospital_reservation_clinic"
                android:paddingStart="55dp"
                android:textStyle="normal"
                android:textSize="@dimen/fix_text_size_3"
                android:text="@string/hospital_reservation_clinic"
                android:textColor="@color/tab_text_color" />

            <RadioButton
                android:id="@+id/btnHotelType2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/btn_tab_bg_right_box"
                android:textStyle="normal"
                android:textSize="@dimen/fix_text_size_3"
                android:button="@null"
                android:drawablePadding="10dp"
                android:drawableStart="@drawable/ic_hospital_reservation_hotel"
                android:paddingStart="55dp"
                android:text="@string/hospital_reservation_hotel"
                android:textColor="@color/tab_text_color" />
        </RadioGroup>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>