<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:background="@drawable/pale_grey_three_solid_round_rect_6">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detailItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/slateGrey"
        android:textSize="14dp"
        android:textStyle="normal"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4"
        tools:text="클라도스포리움 곰팡이" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/detailDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:includeFontPadding="false"
        android:textColor="@color/light_grey"
        android:textSize="9dp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/detailItem"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4"
        tools:text="Cladosporium herbarum" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/value"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:textColor="@color/orange"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/detailItem"
        app:layout_constraintWidth_percent="0.15"
        tools:text="111.0" />

    <LinearLayout
        android:id="@+id/dangerContainer"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:paddingStart="2dp"
        android:paddingTop="19dp"
        android:paddingBottom="19dp"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintStart_toEndOf="@id/value">


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>