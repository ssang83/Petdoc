<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/contentImg2"
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:scaleType="centerCrop"
            tools:background="@color/orange"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/contentTitle2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            tools:text="1.고양이 털갈이"
            android:textSize="@dimen/fix_text_size_7"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            app:layout_constraintTop_toBottomOf="@+id/contentImg2"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/content4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="36dp"
            tools:text="강아지가 털갈이를 하는 시기에는 평소보다 훨씬 더 많은 양이 털이 빠져 호흡기에 신경 써야 하는 것은 물론 강아지 털에 따라 빗질 방법과 권장하는 브러쉬가 다르기 때문에 주 써야 하는 것은 물론 강아지 "
            android:textSize="@dimen/fix_text_size_4"
            android:textStyle="normal"
            android:textColor="@color/dark_grey"
            app:layout_constraintTop_toBottomOf="@+id/contentTitle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>