<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="0dp"
        android:layout_height="@dimen/home_header_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/main_life"
            android:textColor="@color/dark_grey"
            android:textStyle="bold"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="@dimen/fix_text_size_4"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnMyPage"
            android:layout_width="@dimen/home_header_height"
            android:layout_height="@dimen/home_header_height"
            android:padding="@dimen/top_my_icon_padding"
            android:src="@drawable/ic_mypage"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/life_coordinator_id"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/white"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/life_coordinator_appbar_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:elevation="0dp"
            >
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    > <!--app:layout_collapseMode="parallax"-->

                    <androidx.viewpager2.widget.ViewPager2
                        android:id="@+id/life_advertise_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="@dimen/life_top_col_ad_height"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                    <TextView
                        android:id="@+id/life_advertise_list_famous_pettalk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/life_top_col_gap_1"
                        app:layout_constraintTop_toBottomOf="@id/life_advertise_list"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/life_top_col_side"
                        android:text="@string/famous_pettalk"
                        android:textSize="@dimen/fix_text_size_4"
                        android:textColor="@color/dark_grey"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:id="@+id/life_advertise_list_pettalk_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/life_advertise_list_pettalk_more_icon"
                        app:layout_constraintTop_toTopOf="@id/life_advertise_list_famous_pettalk"
                        app:layout_constraintBottom_toBottomOf="@id/life_advertise_list_famous_pettalk"
                        android:text="@string/more"
                        android:textSize="@dimen/fix_text_size_2"
                        android:textStyle="normal"
                        android:textColor="@color/light_grey"
                        android:layout_marginEnd="@dimen/life_top_col_gap_2"
                        />

                    <ImageView
                        android:id="@+id/life_advertise_list_pettalk_more_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="@id/life_advertise_list_pettalk_more"
                        app:layout_constraintBottom_toBottomOf="@id/life_advertise_list_pettalk_more"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingTop="@dimen/life_top_col_gap_2"
                        android:paddingBottom="@dimen/life_top_col_gap_2"
                        app:tint="@color/light_grey"
                        android:layout_marginEnd="@dimen/life_top_col_side"
                        />

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/life_pettalk_panel"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/life_top_col_pettalk_box_height"
                        android:background="@drawable/white_solid_round_rect"
                        app:layout_constraintTop_toBottomOf="@id/life_advertise_list_famous_pettalk"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginStart="@dimen/life_top_col_side"
                        android:layout_marginEnd="@dimen/life_top_col_side"
                        android:layout_marginTop="@dimen/life_top_col_pettalk_box_gap"
                        android:elevation="1.5dp"
                        android:padding="@dimen/life_top_col_pettalk_pannel_padding"
                        >
                        <TextView
                            android:id="@+id/life_advertise_list_pettalk_tag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_grey"
                            android:text="#강아지"
                            android:textStyle="bold"
                            android:textSize="@dimen/fix_text_size_3"
                            app:layout_constraintStart_toStartOf="@id/life_pettalk_panel"
                            app:layout_constraintTop_toTopOf="@id/life_pettalk_panel"
                            />

                        <TextView
                            android:id="@+id/life_advertise_list_pettalk_tag_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:textStyle="normal"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/fix_text_size_2"
                            android:text="@string/sample_1"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginTop="@dimen/life_top_col_pettalk_pannel_text_gap"
                            android:lineSpacingMultiplier="1"
                            android:layout_marginStart="@dimen/life_top_col_gap_3"
                            android:layout_marginEnd="@dimen/life_top_col_gap_3"
                            android:textAlignment="gravity"
                            android:gravity="top|start"
                            />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <HorizontalScrollView
                        android:id="@+id/life_pettalk_category"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/life_top_col_category_height"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/life_pettalk_panel"
                        android:scrollbarSize="0dp"
                        android:scrollbars="none"
                        android:scrollbarFadeDuration="0"
                        android:fadingEdge="none"
                        android:fadeScrollbars="false"
                        android:fadingEdgeLength="0dp"
                        android:overScrollMode="never"
                        >
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical|start"
                            android:orientation="horizontal"
                            >
                            <LinearLayout
                                android:layout_width="@dimen/life_top_col_category_width"
                                android:layout_height="match_parent"
                                android:id="@+id/life_advertise_list_pettalk_all"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_marginStart="@dimen/life_top_col_side"
                                >
                                <ImageView
                                    android:layout_width="@dimen/life_top_col_category_image"
                                    android:layout_height="@dimen/life_top_col_category_image"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/pettalk_all_on"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/life_top_col_category_text_height"
                                    android:text="@string/all"
                                    android:textStyle="normal"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/fix_text_size_2"
                                    android:textAlignment="gravity"
                                    android:gravity="center_horizontal|bottom"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/life_top_col_category_width"
                                android:layout_height="match_parent"
                                android:id="@+id/life_advertise_list_pettalk_tag_1"
                                android:gravity="center"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="@dimen/life_top_col_category_image"
                                    android:layout_height="@dimen/life_top_col_category_image"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/pettalk_dog_on"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/life_top_col_category_text_height"
                                    android:text="@string/dog"
                                    android:textStyle="normal"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/fix_text_size_2"
                                    android:textAlignment="gravity"
                                    android:gravity="center_horizontal|bottom"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/life_top_col_category_width"
                                android:layout_height="match_parent"
                                android:id="@+id/life_advertise_list_pettalk_tag_2"
                                android:gravity="center"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="@dimen/life_top_col_category_image"
                                    android:layout_height="@dimen/life_top_col_category_image"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/pettalk_cat_on"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/life_top_col_category_text_height"
                                    android:text="@string/cat"
                                    android:textStyle="normal"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/fix_text_size_2"
                                    android:textAlignment="gravity"
                                    android:gravity="center_horizontal|bottom"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/life_top_col_category_width"
                                android:layout_height="match_parent"
                                android:id="@+id/life_advertise_list_pettalk_tag_3"
                                android:gravity="center"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="@dimen/life_top_col_category_image"
                                    android:layout_height="@dimen/life_top_col_category_image"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/pettalk_hamster_on"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/life_top_col_category_text_height"
                                    android:text="@string/hamster"
                                    android:textStyle="normal"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/fix_text_size_2"
                                    android:textAlignment="gravity"
                                    android:gravity="center_horizontal|bottom"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/life_top_col_category_width"
                                android:layout_height="match_parent"
                                android:id="@+id/life_advertise_list_pettalk_tag_4"
                                android:gravity="center"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="@dimen/life_top_col_category_image"
                                    android:layout_height="@dimen/life_top_col_category_image"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/pettalk_hedgehog_on"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/life_top_col_category_text_height"
                                    android:text="@string/hedgehog"
                                    android:textStyle="normal"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/fix_text_size_2"
                                    android:textAlignment="gravity"
                                    android:gravity="center_horizontal|bottom"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/life_top_col_category_width"
                                android:layout_height="match_parent"
                                android:id="@+id/life_advertise_list_pettalk_tag_5"
                                android:gravity="center"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="@dimen/life_top_col_category_image"
                                    android:layout_height="@dimen/life_top_col_category_image"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/pettalk_special_on"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/life_top_col_category_text_height"
                                    android:text="@string/special"
                                    android:textStyle="normal"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/fix_text_size_2"
                                    android:textAlignment="gravity"
                                    android:gravity="center_horizontal|bottom"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/life_top_col_category_width"
                                android:layout_height="match_parent"
                                android:id="@+id/life_advertise_list_pettalk_tag_6"
                                android:gravity="center"
                                android:orientation="vertical"
                                >
                                <ImageView
                                    android:layout_width="@dimen/life_top_col_category_image"
                                    android:layout_height="@dimen/life_top_col_category_image"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/pettalk_market_on"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/life_top_col_category_text_height"
                                    android:text="@string/market"
                                    android:textStyle="normal"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/fix_text_size_2"
                                    android:textAlignment="gravity"
                                    android:gravity="center_horizontal|bottom"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="@dimen/life_top_col_category_width"
                                android:layout_height="match_parent"
                                android:id="@+id/life_advertise_list_pettalk_history"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_marginEnd="@dimen/life_top_col_side"
                                >
                                <ImageView
                                    android:layout_width="@dimen/life_top_col_category_image"
                                    android:layout_height="@dimen/life_top_col_category_image"
                                    android:adjustViewBounds="true"
                                    android:src="@drawable/pettalk_history_on"
                                    />
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/life_top_col_category_text_height"
                                    android:text="@string/before"
                                    android:textStyle="normal"
                                    android:textColor="@color/dark_grey"
                                    android:textSize="@dimen/fix_text_size_2"
                                    android:textAlignment="gravity"
                                    android:gravity="center_horizontal|bottom"
                                    />
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>

                    <TextView
                        android:id="@+id/life_reference_book"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reference_book"
                        android:textColor="@color/dark_grey"
                        android:textSize="@dimen/fix_text_size_4"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/life_advertise_list_famous_pettalk"
                        app:layout_constraintTop_toBottomOf="@id/life_pettalk_category"
                        android:layout_marginTop="@dimen/life_top_col_gap_4"
                        />

                    <TextView
                        android:id="@+id/life_reference_book_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toStartOf="@+id/life_reference_book_more_icon"
                        app:layout_constraintTop_toTopOf="@id/life_reference_book"
                        app:layout_constraintBottom_toBottomOf="@id/life_reference_book"
                        android:text="@string/more"
                        android:textStyle="normal"
                        android:textSize="@dimen/fix_text_size_2"
                        android:textColor="@color/light_grey"
                        android:layout_marginEnd="@dimen/life_top_col_gap_2"
                        />

                    <ImageView
                        android:id="@+id/life_reference_book_more_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="@id/life_reference_book_more"
                        app:layout_constraintBottom_toBottomOf="@id/life_reference_book_more"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingTop="@dimen/life_top_col_gap_2"
                        android:paddingBottom="@dimen/life_top_col_gap_2"
                        app:tint="@color/light_grey"
                        android:layout_marginEnd="@dimen/life_top_col_side"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>

        <!--<androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            android:id="@+id/life_reference_book_list_nested"
            >-->
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:overScrollMode="never"
                android:id="@+id/life_reference_book_list"
                android:paddingStart="@dimen/recommend_text_item_gaps"
                android:paddingEnd="@dimen/recommend_text_item_gaps"
                />
        <!--</androidx.core.widget.NestedScrollView>-->

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
    
    <ImageView
        android:id="@+id/life_move_to_top_button"
        android:layout_width="@dimen/move_top_icon_size"
        android:layout_height="@dimen/move_top_icon_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="@dimen/move_top_icon_gap"
        android:layout_marginBottom="@dimen/move_top_icon_gap"
        android:src="@drawable/move_top_icon"
        />


</androidx.constraintlayout.widget.ConstraintLayout>

