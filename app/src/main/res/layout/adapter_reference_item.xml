<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/recommend_margin"
    android:paddingBottom="@dimen/recommend_margin">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        tools:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="H,1:1"
        android:id="@+id/recommend_life_image"
        />
    
    <ImageView
        android:layout_width="@dimen/life_top_col_like_button"
        android:layout_height="22dp"
        android:src="@drawable/like_image_off"
        android:layout_marginTop="@dimen/life_top_col_like_padding"
        android:layout_marginEnd="@dimen/life_top_col_like_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/recommend_life_like"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommend_life_image"
        android:text="외과"
        android:textSize="@dimen/fix_text_size_2"
        android:textColor="@color/light_grey"
        android:textStyle="bold"
        android:id="@+id/recommend_life_type"
        android:layout_marginTop="@dimen/recommend_text_gap"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/recommend_text_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recommend_life_type"
        android:text="반려견에게 이런 과이릉ㄹ 주세요!"
        android:maxLines="2"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/dark_grey"
        android:textSize="@dimen/fix_text_size_2"
        android:layout_marginTop="@dimen/recommend_text_gap2"
        android:id="@+id/recommend_life_title"
        />

</androidx.constraintlayout.widget.ConstraintLayout>