<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hospital_map_page">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="0dp"
        android:layout_height="@dimen/home_header_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="5dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/btnBack"
            android:layout_width="@dimen/home_header_height"
            android:layout_height="@dimen/home_header_height"
            android:padding="@dimen/top_my_icon_padding"
            android:src="@drawable/backbutton"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/hospital_search_map_top_search_icon_size"
            android:layout_height="@dimen/hospital_search_map_top_search_icon_size"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/search_icon_grey"
            android:layout_marginStart="@dimen/hospital_search_map_top_panel_gap"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/hospitalSearch"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toEndOf="@id/imgSearch"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="@string/search_hint"
            android:textColorHint="@color/light_grey"
            android:textColor="@color/dark_grey"
            android:textAlignment="gravity"
            android:gravity="center_vertical|start"
            android:textSize="@dimen/fix_text_size_4"
            android:padding="0dp"
            android:background="@color/white"
            android:layout_marginStart="@dimen/hospital_search_map_top_panel_gap"
            android:singleLine="true"
            android:maxLines="1"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <fragment
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/hospital_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_marginBottom="@dimen/hospital_search_map_bottom_margin"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutHospital"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:paddingBottom="16dp"
            android:background="@drawable/white_round_top_only"
            android:elevation="5dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hospitalImg"
                android:layout_width="90dp"
                android:layout_height="90dp"
                tools:src="@color/orange"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/hospitalName"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hospitalName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="브이케어 동물병원"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/fix_text_size_4"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutHospitalInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mypage_pet_information_profile_margin"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/hospitalImg"
                app:layout_constraintTop_toBottomOf="@+id/hospitalName">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    tools:text="30m"
                    android:textSize="@dimen/fix_text_size_2"
                    android:textColor="@color/color5c6073"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/light_blue_grey"
                    android:layout_marginStart="@dimen/change_information_gap1"
                    app:layout_constraintStart_toEndOf="@+id/distance"
                    app:layout_constraintTop_toTopOf="@+id/distance"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/address"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/change_information_gap1"
                    android:includeFontPadding="false"
                    tools:text="서울시 서초구 논현로 79길 32 1층"
                    android:textStyle="normal"
                    android:textColor="@color/color5c6073"
                    android:textSize="@dimen/fix_text_size_2"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:ellipsize="end"
                    app:layout_constraintStart_toEndOf="@+id/divider"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutHospitalStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="@dimen/mypage_pet_information_profile_margin"
                app:layout_constraintTop_toBottomOf="@+id/layoutHospitalInfo"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    tools:text="진료중"
                    android:textSize="@dimen/fix_text_size_2"
                    android:textColor="@color/color5c6073"
                    android:textStyle="normal"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <View
                    android:id="@+id/divider1"
                    android:layout_width="1dp"
                    android:layout_height="10dp"
                    android:background="@color/light_blue_grey"
                    android:layout_marginStart="@dimen/change_information_gap1"
                    app:layout_constraintStart_toEndOf="@+id/status"
                    app:layout_constraintTop_toTopOf="@+id/status"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/medicalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/change_information_gap1"
                    tools:text="10:00 ~ 19:00"
                    android:textStyle="normal"
                    android:textColor="@color/color5c6073"
                    android:textSize="@dimen/fix_text_size_2"
                    app:layout_constraintStart_toEndOf="@+id/divider1"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/hospitalType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutHospitalStatus"
                app:layout_constraintEnd_toStartOf="@+id/hospitalImg"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutHospitalCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/mypage_pet_information_profile_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/layoutButton"
                app:layout_constraintTop_toTopOf="@id/layoutButton">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imageViewCall"
                    android:layout_width="@dimen/home_content_margin"
                    android:layout_height="@dimen/home_content_margin"
                    android:src="@drawable/ic_call"
                    android:adjustViewBounds="true"
                    app:layout_constraintTop_toTopOf="@+id/textViewCall"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewCall"
                    app:layout_constraintStart_toStartOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewCall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:layout_marginStart="@dimen/home_text_gap"
                    android:text="@string/home_hospital_call"
                    android:textSize="@dimen/fix_text_size_2"
                    android:textStyle="normal"
                    android:textColor="@color/dark_grey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageViewCall"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/home_content_margin"
                android:layout_marginTop="@dimen/home_content_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/hospitalImg"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnReservation"
                    android:layout_width="@dimen/home_hospital_width"
                    android:layout_height="@dimen/home_hospital_height"
                    android:background="@drawable/orange_solid_round_18"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewReservation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:src="@drawable/ic_reservation"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginStart="@dimen/home_text_gap"
                        android:text="@string/home_hospital_reservation"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/fix_text_size_2"
                        app:layout_constraintStart_toEndOf="@+id/imageViewReservation"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnReception"
                    android:layout_width="@dimen/home_hospital_width"
                    android:layout_height="@dimen/home_hospital_height"
                    android:layout_marginStart="@dimen/home_text_gap2"
                    android:background="@drawable/dark_grey_solid_round_18"
                    app:layout_constraintStart_toEndOf="@+id/btnReservation"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imageViewReception"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:src="@drawable/ic_reception"
                        android:adjustViewBounds="true"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        android:layout_marginStart="@dimen/home_text_gap"
                        android:text="@string/home_hospital_reception"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="@dimen/fix_text_size_2"
                        app:layout_constraintStart_toEndOf="@+id/imageViewReception"
                        app:layout_constraintTop_toTopOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/showHospitalList"
            android:layout_width="0dp"
            android:layout_height="@dimen/hospital_search_map_bottom_panel_height"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/white_round_top_only"
            android:elevation="5dp"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hospital_search_map_bottom_panel_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/hospital_search_map_bottom_panel_arrow"
                android:text="@string/show_hospital_list"
                android:textColor="@color/dark_grey"
                android:textStyle="bold"
                android:textSize="@dimen/fix_text_size_4"
                app:layout_constraintHorizontal_chainStyle="packed"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/hospital_search_map_bottom_panel_arrow"
                android:layout_width="@dimen/hospital_search_map_bottom_panel_arrow_size"
                android:layout_height="@dimen/hospital_search_map_bottom_panel_arrow_size"
                app:layout_constraintStart_toEndOf="@id/hospital_search_map_bottom_panel_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/upside_arrow"
                android:layout_marginStart="@dimen/hospital_search_map_bottom_panel_gap"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="12dp"
        android:background="@drawable/white_alpha_98_round_solid"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageViewInfo"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_info"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="@+id/textViewInfo"
                app:layout_constraintBottom_toBottomOf="@+id/textViewInfo"
                app:layout_constraintStart_toStartOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:includeFontPadding="false"
                android:text="@string/hospital_info"
                android:textSize="@dimen/fix_text_size_1"
                android:textStyle="normal"
                android:textColor="@color/dark_grey"
                app:layout_constraintStart_toEndOf="@+id/imageViewInfo"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnArrow"
                android:layout_width="12dp"
                android:layout_height="7dp"
                tools:src="@drawable/ic_map_arrow_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textViewInfo"
                app:layout_constraintBottom_toBottomOf="@+id/textViewInfo"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutInfoDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="9dp"
            app:layout_constraintTop_toBottomOf="@+id/layoutInfo"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutReservation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/imageViewMarker"
                    android:src="@drawable/ic_reservation_marker"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewMarker"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewMarker"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewMarker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:includeFontPadding="false"
                    android:text="@string/hospital_info_reservation"
                    android:textSize="@dimen/fix_text_size_1"
                    android:textStyle="normal"
                    android:textColor="@color/dark_grey"
                    app:layout_constraintStart_toEndOf="@+id/imageViewMarker"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDefault"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintTop_toBottomOf="@+id/layoutReservation"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/imageViewMarkerDefault"
                    android:src="@drawable/blue_green_circle"
                    android:adjustViewBounds="true"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textViewMarkerDefault"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewMarkerDefault"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textViewMarkerDefault"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:includeFontPadding="false"
                    android:text="@string/hospital_info_default"
                    android:textSize="@dimen/fix_text_size_1"
                    android:textStyle="normal"
                    android:textColor="@color/dark_grey"
                    app:layout_constraintStart_toEndOf="@+id/imageViewMarkerDefault"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16.5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomLayout"
        >
        
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/btnPosition"
            tools:src="@drawable/ic_map_position_select"
            android:adjustViewBounds="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:id="@+id/btnFilter"
            tools:src="@drawable/ic_map_filter_default"
            android:adjustViewBounds="true"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPosition"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/hospitalLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/white"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hideHospitalList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:includeFontPadding="false"
                android:textStyle="bold"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/fix_text_size_4"
                android:text="@string/hospital_search_list"
                android:gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_open"
                android:layout_marginStart="5dp"
                app:layout_constraintTop_toTopOf="@+id/textViewTitle"
                app:layout_constraintStart_toEndOf="@+id/textViewTitle"
                app:layout_constraintBottom_toBottomOf="@+id/textViewTitle"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutFilter"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/grey"
            app:layout_constraintTop_toBottomOf="@+id/hideHospitalList"
            app:layout_constraintStart_toStartOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewTotal"
                    android:includeFontPadding="false"
                    android:text="@string/hospital_search_list_total"
                    android:textSize="@dimen/fix_text_size_3"
                    android:textStyle="bold"
                    android:textColor="@color/light_grey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/count"
                    android:layout_marginStart="3dp"
                    android:includeFontPadding="false"
                    tools:text="100"
                    android:textColor="@color/orange"
                    android:textStyle="bold"
                    android:textSize="@dimen/fix_text_size_3"
                    app:layout_constraintTop_toTopOf="@+id/textViewTotal"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewTotal"
                    app:layout_constraintStart_toEndOf="@+id/textViewTotal"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="@string/hospital_search_list_count"
                    android:textSize="@dimen/fix_text_size_3"
                    android:textStyle="bold"
                    android:textColor="@color/light_grey"
                    app:layout_constraintTop_toTopOf="@+id/textViewTotal"
                    app:layout_constraintBottom_toBottomOf="@+id/textViewTotal"
                    app:layout_constraintStart_toEndOf="@+id/count"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="20dp"
                android:layout_height="19dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:adjustViewBounds="true"
                android:layout_marginEnd="18dp"
                tools:src="@drawable/ic_hospital_list_filter_default"
                android:id="@+id/btnHospitalListFilter"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hospitalList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:overScrollMode="never"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/layoutFilter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    
</androidx.constraintlayout.widget.ConstraintLayout>