<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/btnCheckClinic"
            android:background="@drawable/btn_hospital_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clinicName"
            tools:text="일반진료"
            android:textSize="@dimen/fix_text_size_3"
            android:textStyle="normal"
            android:textColor="@color/dark_grey"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@+id/btnCheckClinic"
            app:layout_constraintTop_toTopOf="@+id/btnCheckClinic"
            app:layout_constraintBottom_toBottomOf="@+id/btnCheckClinic"
            android:includeFontPadding="false"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>