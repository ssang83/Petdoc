<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/root"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:textStyle="bold"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/fix_text_size_4"
            android:text="@string/care_poop_title"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/login_close_button_size"
            android:layout_height="@dimen/login_close_button_size"
            android:padding="@dimen/login_close_button_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:adjustViewBounds="true"
            android:src="@drawable/x_button"
            android:id="@+id/btnClose"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/grey"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnComplete">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/care_content_margin11"
                android:layout_marginStart="@dimen/care_content_margin11"
                android:text="@string/care_poop_pee"
                android:textSize="@dimen/fix_text_size_3"
                android:textColor="@color/light_grey"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/care_content_margin2"
                android:paddingStart="@dimen/care_content_margin11"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPeeType1"
                    android:layout_width="@dimen/care_poop_type_size"
                    android:layout_height="@dimen/care_poop_type_size"
                    android:background="@drawable/cream_circle">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/peeType1"
                        android:layout_width="@dimen/care_poop_type_size"
                        android:layout_height="@dimen/care_poop_type_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_care_poop_check"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPeeType2"
                    android:layout_width="@dimen/care_poop_type_size"
                    android:layout_height="@dimen/care_poop_type_size"
                    android:layout_marginStart="@dimen/care_content_margin11"
                    android:background="@drawable/sunny_yellow_circle">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/peeType2"
                        android:layout_width="@dimen/care_poop_type_size"
                        android:layout_height="@dimen/care_poop_type_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_care_poop_check"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPeeType3"
                    android:layout_width="@dimen/care_poop_type_size"
                    android:layout_height="@dimen/care_poop_type_size"
                    android:layout_marginStart="@dimen/care_content_margin11"
                    android:background="@drawable/orange_yellow_circle">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/peeType3"
                        android:layout_width="@dimen/care_poop_type_size"
                        android:layout_height="@dimen/care_poop_type_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_care_poop_check"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPeeType4"
                    android:layout_width="@dimen/care_poop_type_size"
                    android:layout_height="@dimen/care_poop_type_size"
                    android:layout_marginStart="@dimen/care_content_margin11"
                    android:background="@drawable/paste_pink_circle">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/peeType4"
                        android:layout_width="@dimen/care_poop_type_size"
                        android:layout_height="@dimen/care_poop_type_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_care_poop_check"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPeeType5"
                    android:layout_width="@dimen/care_poop_type_size"
                    android:layout_height="@dimen/care_poop_type_size"
                    android:layout_marginStart="@dimen/care_content_margin11"
                    android:background="@drawable/milk_chocolate_circle">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/peeType5"
                        android:layout_width="@dimen/care_poop_type_size"
                        android:layout_height="@dimen/care_poop_type_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_care_poop_check"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutPeeType6"
                    android:layout_width="@dimen/care_poop_type_size"
                    android:layout_height="@dimen/care_poop_type_size"
                    android:layout_marginStart="@dimen/care_content_margin11"
                    android:background="@drawable/sea_green_circle">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/peeType6"
                        android:layout_width="@dimen/care_poop_type_size"
                        android:layout_height="@dimen/care_poop_type_size"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/ic_care_poop_check"
                        android:adjustViewBounds="true"
                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/care_content_margin14"
                android:layout_marginStart="@dimen/care_content_margin11"
                android:text="@string/care_poop_feces"
                android:textSize="@dimen/fix_text_size_3"
                android:textColor="@color/light_grey"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/care_content_margin2"
                android:paddingStart="@dimen/care_content_margin11"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutFecesType1"
                    android:layout_width="@dimen/care_poop_feces_type_width"
                    android:layout_height="@dimen/care_poop_feces_type_height"
                    android:background="@drawable/bg_feces_type">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fecesType1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="@color/poop_feces_text_color"
                        android:textSize="@dimen/fix_text_size_3"
                        android:text="@string/care_poop_type1"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutFecesType2"
                    android:layout_width="@dimen/care_poop_feces_type_width"
                    android:layout_height="@dimen/care_poop_feces_type_height"
                    android:layout_marginStart="@dimen/care_content_margin15"
                    android:background="@drawable/bg_feces_type">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fecesType2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="@color/poop_feces_text_color"
                        android:textSize="@dimen/fix_text_size_3"
                        android:text="@string/care_poop_type2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutFecesType3"
                    android:layout_width="@dimen/care_poop_feces_type_width"
                    android:layout_height="@dimen/care_poop_feces_type_height"
                    android:layout_marginStart="@dimen/care_content_margin15"
                    android:background="@drawable/bg_feces_type">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fecesType3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="@color/poop_feces_text_color"
                        android:textSize="@dimen/fix_text_size_3"
                        android:text="@string/care_poop_type3"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutFecesType4"
                    android:layout_width="@dimen/care_poop_feces_type_width"
                    android:layout_height="@dimen/care_poop_feces_type_height"
                    android:layout_marginStart="@dimen/care_content_margin15"
                    android:background="@drawable/bg_feces_type">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fecesType4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="@color/poop_feces_text_color"
                        android:textSize="@dimen/fix_text_size_3"
                        android:text="@string/care_poop_type4"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/care_content_margin11"
                android:layout_marginTop="@dimen/care_content_margin1"
                android:orientation="horizontal">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutFecesType5"
                    android:layout_width="@dimen/care_poop_feces_type_width"
                    android:layout_height="@dimen/care_poop_feces_type_height"
                    android:background="@drawable/bg_feces_type">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fecesType5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="@color/poop_feces_text_color"
                        android:textSize="@dimen/fix_text_size_3"
                        android:text="@string/care_poop_type5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layoutFecesType6"
                    android:layout_width="@dimen/care_poop_feces_type_width"
                    android:layout_height="@dimen/care_poop_feces_type_height"
                    android:layout_marginStart="@dimen/care_content_margin15"
                    android:background="@drawable/bg_feces_type">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fecesType6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textColor="@color/poop_feces_text_color"
                        android:textSize="@dimen/fix_text_size_3"
                        android:text="@string/care_poop_type6"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/care_content_margin2"
                android:layout_marginEnd="@dimen/care_content_margin2"
                android:layout_marginTop="@dimen/care_content_margin10"
                android:layout_marginBottom="@dimen/care_content_margin12"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/care_content_margin11"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textColor="@color/dark_grey"
                        android:textStyle="bold"
                        android:text="@string/care_poop_question"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/care_content_margin11"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/care_content_margin13"
                            android:layout_height="@dimen/care_content_margin13"
                            android:layout_gravity="center"
                            android:background="@drawable/orange_circle"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/care_content_margin4"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/fix_text_size_3"
                            android:text="@string/care_poop_reason1"
                            android:textStyle="normal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/care_content_margin1"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/care_content_margin13"
                            android:layout_height="@dimen/care_content_margin13"
                            android:layout_marginTop="@dimen/care_content_margin3"
                            android:background="@drawable/orange_circle"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/care_content_margin4"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/fix_text_size_3"
                            android:text="@string/care_poop_reason2"
                            android:textAlignment="textStart"
                            android:textStyle="normal"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/care_content_margin1"
                        android:orientation="horizontal">

                        <View
                            android:layout_width="@dimen/care_content_margin13"
                            android:layout_height="@dimen/care_content_margin13"
                            android:layout_marginTop="@dimen/care_content_margin3"
                            android:background="@drawable/orange_circle"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/care_content_margin4"
                            android:textColor="@color/dark_grey"
                            android:textSize="@dimen/fix_text_size_3"
                            android:text="@string/care_poop_reason3"
                            android:textAlignment="textStart"
                            android:textStyle="normal"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/btnComplete"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/button_margin"
        android:layout_marginEnd="@dimen/button_margin"
        android:layout_marginBottom="@dimen/button_margin"
        android:background="@drawable/button_background"
        android:textColor="@color/btn_text_color"
        android:textStyle="bold"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="@dimen/fix_text_size_5"
        android:text="@string/care_poop_complete" />

</androidx.constraintlayout.widget.ConstraintLayout>