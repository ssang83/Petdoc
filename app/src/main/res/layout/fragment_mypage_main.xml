<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="@dimen/login_close_button_size"
        android:layout_height="@dimen/login_close_button_size"
        android:padding="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        android:src="@drawable/x_button"
        android:id="@+id/mypage_close_button"
        />

    <TextView
        android:id="@+id/mypage_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/mypage_close_button"
        app:layout_constraintBottom_toBottomOf="@id/mypage_close_button"
        android:textColor="@color/dark_grey"
        android:textAlignment="gravity"
        android:gravity="center"
        android:textSize="@dimen/fix_text_size_4"
        android:textStyle="bold"
        android:text="@string/mypage"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintTop_toBottomOf="@id/mypage_close_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_pet_info_panel"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:paddingStart="@dimen/mypage_pet_side_margin"
                    android:paddingEnd="@dimen/mypage_pet_side_margin"
                    android:paddingBottom="@dimen/mypage_pet_info_panel_bottom_padding"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/mypage_user_profile_image"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:background="@drawable/grey_full_round_stroke_rect"
                        app:layout_constraintStart_toStartOf="@id/mypage_user_profile_image"
                        app:layout_constraintTop_toTopOf="@id/mypage_user_profile_image"
                        app:layout_constraintBottom_toBottomOf="@id/mypage_user_profile_image"
                        app:layout_constraintEnd_toEndOf="@id/mypage_user_profile_image"
                        />

                    <TextView
                        android:id="@+id/mypage_user_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toEndOf="@id/mypage_user_profile_image"
                        app:layout_constraintTop_toTopOf="@id/mypage_user_profile_image"
                        app:layout_constraintBottom_toTopOf="@+id/mypage_user_grade"
                        android:textSize="20dp"
                        android:textColor="@color/dark_grey"
                        tools:text="홍길동 님"
                        android:layout_marginStart="@dimen/mypage_pet_info_panel_bottom_padding"
                        android:textStyle="bold"
                        app:layout_constraintVertical_chainStyle="packed"
                        />

                    <TextView
                        android:id="@+id/mypage_user_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@id/mypage_user_name_text"
                        app:layout_constraintTop_toBottomOf="@id/mypage_user_name_text"
                        app:layout_constraintBottom_toBottomOf="@id/mypage_user_profile_image"
                        android:includeFontPadding="false"
                        tools:text="Lv.2 그냥주이니"
                        android:textStyle="bold"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textColor="@color/light_grey"
                        android:layout_marginTop="@dimen/mypage_pet_text_gap"
                        />

                    <TextView
                        android:id="@+id/mypage_user_information_update"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/mypage_information_change_height"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:includeFontPadding="false"
                        android:text="@string/information_change"
                        android:textAlignment="gravity"
                        android:gravity="center"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textStyle="normal"
                        android:textColor="@color/light_grey"
                        android:background="@drawable/grey_full_round_stroke_rect"
                        android:paddingStart="@dimen/mypage_change_info_padding"
                        android:paddingEnd="@dimen/mypage_change_info_padding"
                        />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    app:layout_constraintTop_toBottomOf="@+id/mypage_pet_info_panel"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <!-- mypet middle option tabs ============================================================ -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="140dp"
                    app:layout_constraintTop_toBottomOf="@id/mypage_pet_info_panel"
                    app:layout_constraintStart_toStartOf="parent"
                    >

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mypage_mypet_information_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_my_pet_info"
                        android:drawablePadding="8dp"
                        android:text="@string/mypet_information"
                        android:textStyle="normal"
                        android:textColor="@color/slateGrey"
                        android:textSize="14dp"
                        android:paddingBottom="20dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintWidth_percent="0.33"
                        app:layout_constraintTop_toTopOf="@id/mypage_health_care_area"
                        app:layout_constraintStart_toStartOf="parent"
                        />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/light_grey5"
                        app:layout_constraintStart_toEndOf="@+id/mypage_mypet_information_area"
                        app:layout_constraintTop_toTopOf="@id/mypage_health_care_area"
                        app:layout_constraintBottom_toBottomOf="@id/mypage_health_care_area"
                        android:layout_marginBottom="3dp"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mypage_health_care_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_my_checkup"
                        android:drawablePadding="8dp"
                        android:text="혈액/알러지\n검사 결과"
                        android:textStyle="normal"
                        android:textColor="@color/slateGrey"
                        android:textSize="14dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintWidth_percent="0.33"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@id/divider"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_health_care_new"
                        android:adjustViewBounds="true"
                        android:id="@+id/careBadge"
                        app:layout_constraintTop_toTopOf="@+id/mypage_health_care_area"
                        app:layout_constraintEnd_toEndOf="@+id/mypage_health_care_area"
                        android:layout_marginEnd="23dp"
                        android:visibility="gone"
                        />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="@color/light_grey5"
                        app:layout_constraintStart_toEndOf="@+id/mypage_health_care_area"
                        app:layout_constraintTop_toTopOf="@id/mypage_health_care_area"
                        app:layout_constraintBottom_toBottomOf="@id/mypage_health_care_area"
                        android:layout_marginBottom="3dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/mypage_mypet_history_area"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:drawableTop="@drawable/ic_my_reservation"
                        android:drawablePadding="8dp"
                        android:text="@string/mypet_history"
                        android:textStyle="normal"
                        android:textColor="@color/slateGrey"
                        android:textSize="14dp"
                        android:paddingBottom="20dp"
                        app:layout_constrainedWidth="true"
                        app:layout_constraintWidth_percent="0.33"
                        app:layout_constraintTop_toTopOf="@id/mypage_health_care_area"
                        app:layout_constraintStart_toEndOf="@id/divider1"
                        app:layout_constraintEnd_toEndOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey"
                app:layout_constraintTop_toBottomOf="@+id/mypage_pet_info_panel"
                app:layout_constraintStart_toStartOf="parent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_purchase_history_area"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:background="@drawable/grey_line_upside_rect"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/mypage_pet_side_margin"
                        android:text="결제 내역"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textStyle="normal"
                        android:includeFontPadding="false"
                        android:textColor="@color/dark_grey"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_bookmark_area"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:background="@drawable/grey_line_upside_rect"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="@dimen/mypage_pet_side_margin"
                        android:text="@string/bookmark"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textStyle="normal"
                        android:includeFontPadding="false"
                        android:textColor="@color/dark_grey"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_coupon_area"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="20dp"
                        android:text="@string/couponbox"
                        android:textSize="@dimen/fix_text_size_3"
                        android:includeFontPadding="false"
                        android:textStyle="normal"
                        android:textColor="@color/dark_grey"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        android:layout_marginEnd="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_petpoint_area"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginStart="20dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:includeFontPadding="false"
                        android:text="@string/petpoint"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textColor="@color/dark_grey"
                        android:textStyle="normal"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_mystory_area"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:includeFontPadding="false"
                        android:text="@string/mystory"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textStyle="normal"
                        android:textColor="@color/dark_grey"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_my_album"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:includeFontPadding="false"
                        android:text="@string/my_album"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textStyle="normal"
                        android:textColor="@color/dark_grey"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_external_device"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:includeFontPadding="false"
                        android:text="@string/external_device"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textStyle="normal"
                        android:textColor="@color/dark_grey"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_customer_report"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:includeFontPadding="false"
                        android:text="@string/customer_report"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textStyle="normal"
                        android:textColor="@color/dark_grey"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_notice_area"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:includeFontPadding="false"
                        android:text="@string/notice"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textStyle="normal"
                        android:textColor="@color/dark_grey"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mypage_setting_area"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:includeFontPadding="false"
                        android:text="@string/setting"
                        android:textSize="@dimen/fix_text_size_3"
                        android:textStyle="normal"
                        android:textColor="@color/dark_grey"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="10dp"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/symbol_mark_rightbend"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:adjustViewBounds="true"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/grey"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>